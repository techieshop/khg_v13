<?xml version="1.0"?>
<odoo>
    <data>

        <!-- FORM VIEW  -->

        <record id="purchase_order_view" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="sale_order_id"/>
                </field>
                <header>
                    <button name="%(rsw_st_purchase.action_transientmodel_wizard_sale)d"
                            string="Create Internal Sale Order"
                            type="action" class="btn-primary"
                            groups="rsw_st_purchase.group_st"
                            attrs="{'invisible':['|',('state','in',['done','cancel']),('sale_order_id','!=',False)]}"/>
                </header>

            </field>
        </record>

    </data>
</odoo>